@page
@model BookListRazor.Pages.BookList.EditModel
@{
}

<h2 class="text-info">
    Edit a Book
</h2>

<br />

<div class="container border">
    <form method="post" class="m-3">
        <div class=" form-group row " hidden>
            <div class="col-3">
                <label asp-for="book.Id">ID</label>
            </div>
            <div class="col-5">
                <input asp-for="book.Id" class="form-control">
            </div>
        </div>       
        
        <div class=" form-group row ">
            <div class="col-3">
                <label asp-for="book.Name">Name</label>
            </div>
            <div class="col-5">
                <input asp-for="book.Name" class="form-control">
            </div>
            <span asp-validation-for="book.Name" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="book.Author">Author</label>
            </div>
            <div class="col-5">
                <input asp-for="book.Author" class="form-control">
            </div>
            <span asp-validation-for="book.Author" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="book.ISBN">ISBN</label>
            </div>
            <div class="col-5">
                <input asp-for="book.ISBN" class="form-control">
            </div>
            <span asp-validation-for="book.ISBN" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-3 offset-3">
                <a asp-page="/booklist/index" class="btn btn-success col-12">Back To List</a>
            </div>
            <div class="col-4 ">
                <input type="submit" value="Update" class="btn btn-primary col-12" />
            </div>
        </div>
    </form>
    <div class="text-danger" asp-validation-summary="ModelOnly">

    </div>
</div>